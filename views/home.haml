- unless @works.nil?
  %section.recent-work-container
    %section.recent-work.cf
      %ul
        - @works.each do |w|
          %li
            %a(class="work #{w.classification}" href="/work/#{w.slug}")
              %img(src="#{w.thumb}")
- unless @posts.empty?
  .home.container.cf
    #blog
      - @posts.each do |post|
        %article.post
          %section.meta
            %time(datetime="#{post.created_at}") #{post.date}
          %section.meat
            %header
              %h1
                %a(href="/post/#{post.slug}") #{post.title}
            %p #{post.body}
            %section.comments-preview
              %a(href="#") #{post.comments.count} Comments

    = haml :sidebar
